<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}Mixture + Bootstrap{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {{ "slick.css" | asset_url | stylesheet_tag }}
        {{ "app.css" | asset_url | stylesheet_tag }}
        <!-- Script block allowing child pages to inject their own style sheets -->
        {% block style %}{% endblock %}
        <script type="text/javascript" src="//use.typekit.net/ynt0rwm.js"></script>
        <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    </head>
    <body>
      {% include "navigation" %}
      <div id="wrap">
        {% block content %}{% endblock %}
        <div id="push"></div> <!-- Assisting with sticky footer for shorter pages -->
      </div>
      {% include "footer" %}
      <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
      {{ "bootstrap.js" | asset_url | script_tag }}
      {{ "bootstrap-hover-dropdown.min.js" | asset_url | script_tag }}
      {{ "respond.min.js" | asset_url | script_tag }}
      {{ "slick.min.js" | asset_url | script_tag }}
      {{ "placeholder.min.js" | asset_url | script_tag }}
      {{ "modernizr.custom.81402.js" | asset_url | script_tag }}
      <!-- Script block allowing child pages to inject their own scripts -->
      {% block scripts %}{% endblock %}
      {{ "app.min.js" | asset_url | script_tag }}
    </body>
</html>