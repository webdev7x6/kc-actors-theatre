<div id="create-item-form" class="model-display edit-not-in-place hidden" title="New @entityDescriptionSingular">
    <div class="ui-widget-content ui-corner-all ui-widget-cms">
        @using (Ajax.BeginForm("CreatePostAjax", "Blog",
            new AjaxOptions
            {
                HttpMethod = "Post",
                LoadingElementId = "create-item-loading",
                OnFailure = "createItemManager.ajaxFailure",
                OnSuccess = "createItemManager.ajaxSuccess"
            }
        ))
        {
            @Html.LabelFor(m => m.Post.Title)
            <div class="display-field">
                @Html.TextBoxFor(m => m.Post.Title, new { @class = "dialog-textbox", @id = "create-item-name" })<br />
                @Html.ValidationMessageFor(m => m.Post.Title)
            </div>
        }
    </div>
    <div>
        @Html.Partial("~/Areas/Admin/Views/Shared/AjaxLoader.cshtml", new ViewDataDictionary { { "LoaderID", "create-item-loading" } })
    </div>
    <div id="create-item-error" class="ajax-error"></div>
</div>