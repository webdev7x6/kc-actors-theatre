@using Clickfarm.Cms.Mvc
@model KCActorsTheatre.Web.ViewModels.KCActorsTheatreViewModel
@{
    var app = (KCActorsTheatre.Library.AppTypes.KCActorsTheatreApp)Model.RequestContent.App;
    var rq = Model.RequestContent;
    var page = (Clickfarm.Cms.Core.WebPage)rq.Page;
    var pageTitle = (page != null && page.HtmlTitle != string.Empty) ? page.HtmlTitle : "Cerner - Healthy Nevada";
    var keywords = (page != null && page.MetaKeywords != string.Empty) ? page.MetaKeywords : "";
    var description = (page != null && page.MetaDescription != string.Empty) ? page.MetaDescription : "";
}
<!DOCTYPE html>
<!--[if lt IE 9 ]>    <html class="lt-ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
    <head>
        @Html.Partial("_HeaderScripts", Model)
        @RenderSection("styles", required:false)
    </head>
    <body>
        <div>
            @Html.Partial("_Header", Model)
        </div>
        <div class="hero-content">
          <div class="container">
              @RenderBody()
          </div>
        </div>
        @Html.Partial("_Footer", Model)
        @Html.Partial("_FooterScripts", Model)
        @RenderSection("scripts", required:false)

        <div id="modal-signup" class="modal hide fade in">  
            <div class="modal-body">  
                <a class="close" data-dismiss="modal">×</a>  
                @{
                    var model = new KCActorsTheatre.Web.ViewModels.NewsletterSignUpViewModel();
                    model.FormCopy = app.NewsletterSignUpForm;
                }
                @Html.Partial("_NewsletterSignUp", model)                
            </div>  
        </div> 
