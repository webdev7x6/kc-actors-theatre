@using Clickfarm.Cms.Mvc
@using KCActorsTheatre
@using KCActorsTheatre.Cms
@model KCActorsTheatre.Web.ViewModels.KCActorsTheatreViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";    
    var req = Model.RequestContent;
    var page = req.Page as Clickfarm.Cms.Core.WebPage;
}
<div class="inner-page-img">
  @Html.Content(page, "Hero")
</div>
<div class="container inner-page-with-image">
    <div class="row header-row">
        <div class="col-xs-12">
            <h1>@page.Title</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12" id="main-content">
            @Html.Content(page, "Body Copy")
        </div>
    </div>
</div>