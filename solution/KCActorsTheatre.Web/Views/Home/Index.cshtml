@using Clickfarm.AppFramework.Extensions
@using Clickfarm.Cms.Mvc
@using KCActorsTheatre.Web.Extensions
@model KCActorsTheatre.Web.ViewModels.HomeViewModel
@{
    Layout = "~/Views/Shared/Layouts/Layout.cshtml";
    var req = Model.RequestContent;
    var page = req.Page as Clickfarm.Cms.Core.WebPage;
    var rotatorCounter = 0;
}
@section Scripts
{
    <script src="/common/js/homepage.min.js" type="text/javascript"></script>
}
@section Body {
    <div class="row">
        <div class="col-sm-2 col-md-3 hidden-xs">
            <hr class="faded right">
        </div>
        <div class="col-sm-8 col-md-6">
            <h6 class="welcome-statement"><em>@Model.BannerText</em></h6>
        </div>
        <div class="col-sm-2 col-md-3 hidden-xs">
            <hr class="faded left">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 landing-header-media">
            <div id="homepage-carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators hidden-sm hidden-xs">
                    @foreach (var rotator in Model.RotatorImageContents)
                    {
                        <li data-target="#homepage-carousel" data-slide-to="@rotatorCounter" class="@(rotatorCounter == 0 ? "active" : "")"></li>
                        rotatorCounter++;
                    }
                </ol>

                <div class="carousel-inner">
                    @{ rotatorCounter = 0; }
                    @foreach (var rotator in Model.RotatorImageContents)
                    {
                        <div class="item @(rotatorCounter == 0 ? "active" : "")">
                            <img src="@rotator.ImageUrl" alt="@rotator.RotatorTitle">
                            <div class="carousel-caption row">
                                <div class="col-md-4 col-sm-12">
                                    <h2>@rotator.RotatorTitle</h2>
                                </div>
                                <div class="col-md-8 col-sm-12">
                                    <p>@rotator.RotatorCaption</p>
                                </div>
                            </div>
                        </div>
                        rotatorCounter++;
                    }
                </div>

                <a class="left carousel-control hidden-lg hidden-md" href="#homepage-carousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control hidden-lg hidden-md" href="#homepage-carousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>

            </div>
        </div>
    </div>
    <div class="row" id="page-body">
        <div class="col-sm-12" id="main-content">
            <div class="row intro-text">
                <div class="col-sm-12 col-md-4 col-lg-3">
                    <h3>@Model.HomePageMissionStoryWidgetContent.MissionStoryWidgetTitle</h3>
                </div>
                <div class="col-sm-12 col-md-8 col-lg-9">
                    <p>@Model.HomePageMissionStoryWidgetContent.MissionStoryWidgetText <a href="/mission-stories" class="widget-more-link">@Model.HomePageMissionStoryWidgetContent.MissionStoryWidgetLinkText <span class="glyphicon glyphicon-circle-arrow-right"></span></a></p>
                </div>
            </div>
            <div class="row spacer intro-stories clearfix">
                @foreach (var missionStory in Model.MissionStories)
                {
                    <div class="col-md-3 col-sm-6 main-homepage-widget intro-story xs-show">
                        <img src="@missionStory.ThumbnailImageURL" alt="@missionStory.Title">
                        <h4><a href="@Url.MissionStoryUrl(missionStory)">@missionStory.Title</a></h4>
                        <p>@missionStory.Teaser</p>
                    </div>
                }
                <div class="col-xs-12 visible-xs pager-container">
                    <ul class="pager">
                        <li><a href="javascript:void(0);" class="prev-story">&larr;</a></li>
                        <li><a href="javascript:void(0);" class="next-story">&rarr;</a></li>
                    </ul>
                </div>
            </div>
            <div class="row spacer intro-main-widgets">
                <div class="col-md-4 col-sm-12">
                    <div class="outer">
                        @if (Model.ResourceWidgetResources != null && Model.ResourceWidgetResources.Count() > 0)
                        {
                            <div class="main-homepage-widget clearfix">
                                <h4>Resources</h4>
                                <ul class="resource-list">
                                    @foreach (var resource in Model.ResourceWidgetResources)
                                    {
                                        <li class="resource">
                                            <h6><a href="#TODO" title="Format: @resource.ResourceType.GetDescription()">@resource.Title</a></h6>
                                        </li>
                                    }
                                </ul>
                                <a href="/resources/search?tags=@string.Join("&", Model.ResourceWidgetTags.ToArray())" class="pull-right widget-more-link">Learn More <span class="glyphicon glyphicon-circle-arrow-right"></span></a>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="outer">
                        @if (Model.AnnouncementWidgetAnnouncements != null && Model.AnnouncementWidgetAnnouncements.Count() > 0)
                        {
                            <div class="main-homepage-widget clearfix">
                                <h4>Announcements</h4>
                                <ul class="news-list">
                                    @foreach (var announcement in Model.AnnouncementWidgetAnnouncements)
                                    {
                                        <li class="news-item">
                                            <h6>@announcement.Title</h6>
                                            <p class="additional-info">@announcement.DatePublished.Value.ToString(@"dddd, MMMM dd yyyy", System.Globalization.CultureInfo.CurrentCulture)</p>
                                        </li>
                                    }
                                </ul>
                                <a href="#TODO" class="pull-right widget-more-link">More Announcments <span class="glyphicon glyphicon-circle-arrow-right"></span></a>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="outer">
                        @if (Model.ContentWidgetContent != null)
                        {
                            <div class="main-homepage-widget clearfix">
                                <h4>@Model.ContentWidgetContent.Title</h4>
                                <img src="@Model.ContentWidgetContent.ImageUrl" alt="@Model.ContentWidgetContent.Title" class="module-img widget-image">
                                <p class="widget-text">@Model.ContentWidgetContent.Text</p>
                                <p class="text-right">
                                    <a href="@Model.ContentWidgetContent.LinkUrl" target=@Model.ContentWidgetContent.Target class="widget-more-link">
                                        @Model.ContentWidgetContent.LinkText 
                                    <span class="glyphicon glyphicon-circle-arrow-right"></span>
                                </a>
                            </p>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}