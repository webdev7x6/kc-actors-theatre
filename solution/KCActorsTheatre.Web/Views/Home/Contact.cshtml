@using Clickfarm.Cms.Mvc
@using KCActorsTheatre
@using KCActorsTheatre.Cms
@model KCActorsTheatre.Web.ViewModels.ContactViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var app = (KCActorsTheatre.Library.AppTypes.KCActorsTheatreApp)Model.RequestContent.App;
    var req = Model.RequestContent;
    var page = req.Page as Clickfarm.Cms.Core.WebPage;
}

@section scripts
{
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript">
        $('.inner-page form').validate();

        $('label.required').each(function () {
            $(this).append('<span> *</span>')
        })
    </script>
}

<div class="container inner-page">
    <div class="row header-row">
        <div class="col-xs-12">
            <h1>Contact // Let&rsquo;s Get in Touch</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12" id="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <p>For more information about The Actors Theatre, including events, volunteer opportunities, or audition schedules, please fill out the form below.<br /><br /></p>
                </div>
            </div>
            <form role="form" method="post">
                <div class="row">
                    <div class="col-sm-5 col-sm-offset-1">
                        <div class="form-group">
                            <label for="name1" class="sr-only">Name</label>
                            <input type="text" class="form-control" id="name1" name="Name" placeholder="Your Name" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1" class="sr-only">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" name="Email" placeholder="Email Address" required>
                        </div>
                        <div class="form-group">
                            <label for="phone1" class="sr-only">Phone Number</label>
                            <input type="phone" class="form-control" id="phone1" name="PhoneNumber" placeholder="(123) 456-7890" required>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group">
                            <label for="comment1" class="sr-only">Comments</label>
                            <textarea class="form-control" id="comment1" name="Comments" placeholder="Let's Hear It: The Good, The Bad" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-default btn-block btn-lg">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>